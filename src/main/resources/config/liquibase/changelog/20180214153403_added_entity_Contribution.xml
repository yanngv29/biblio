    <!--
        Added the entity Contribution.
    -->
    <changeSet id="20180214153403-1" author="jhipster">
        <createTable tableName="contribution">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="id_chercheur" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="jhi_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="rang" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="publication_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>            <column name="acte_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>            <column name="ouvrage_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>            <column name="revue_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>            <column name="memoire_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>
