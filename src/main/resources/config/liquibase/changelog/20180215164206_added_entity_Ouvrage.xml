            </column>

            <column name="participation_ouvrage" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="annee_ouvrage" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="numero_edition_ouvrage" type="integer">
