            <column name="lieu_ouvrage" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="maison_edition_ouvrage" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="collection_ouvrage" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="langue_ouvrage" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="lien_ouvrage" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="doi_ouvrage" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="hal_ouvrage" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="divers_ouvrage" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
